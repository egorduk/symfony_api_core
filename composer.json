{
  "name": "php-libs/core-bundle",
  "type": "bundle",
  "description": "BTC-X core bundle which has entity definitions",

  "autoload": {
    "psr-0": {
      "Btc\\CoreBundle\\": ""
    }
  },

  "require": {
    "php": ">=5.4.0",
    "symfony/validator": "~2.5",
    "symfony/symfony": "~2.5",
    "gedmo/doctrine-extensions": "~2.3.0",
    "doctrine/doctrine-bundle": ">=1.3.0-beta1",
    "doctrine/doctrine-fixtures-bundle": "~2.2.0",
    "doctrine/doctrine-migrations-bundle": ">=1.0.0-BETA3",
    "doctrine/migrations": "~1.0@dev",
    "doctrine/orm": "2.5.x-dev",
    "doctrine/dbal": "2.5.x-dev",
    "rych/otp": "1.1.0",
    "jms/serializer-bundle": "^2.2"
  },

  "require-dev": {
    "fzaninotto/faker": "1.4.0",
    "phpspec/phpspec": "2.1.0-RC1",
    "phpspec/prophecy": "1.2.1"
  },

  "bin": ["Resources/bin/app"],

  "target-dir": "Btc/CoreBundle",

  "archive": {
    "exclude": ["vendor", "spec"]
  },

  "config": {
    "bin-dir": "bin"
  }
}
